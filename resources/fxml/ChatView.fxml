<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="borderPane" maxHeight="620.0" maxWidth="1040.0"
            prefHeight="620.0"
            prefWidth="1040.0" xmlns="http://javafx.com/javafx/8.0.40"
            fx:controller="controller.ChatController">
    <center>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
            <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" maxHeight="1.7976931348623157E308"
                        maxWidth="1.7976931348623157E308" pannable="true" prefHeight="496.0" vbarPolicy="ALWAYS"
                        vmin="1.0" vvalue="1.0" VBox.vgrow="ALWAYS">
                <ListView fx:id="chatPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                          prefHeight="200.0" prefWidth="200.0"/>
            </ScrollPane>
            <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
                  minWidth="100.0" VBox.vgrow="NEVER">
                <TextArea fx:id="messageBox" maxHeight="1.7976931348623157E308"
                          maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="100.0"
                          nodeOrientation="LEFT_TO_RIGHT" onKeyPressed="#sendMethod" prefHeight="16.0"
                          prefWidth="698.0" promptText="请输入内容..." scaleShape="false" HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="SansSerif Regular" size="14.0"/>
                    </font>
                </TextArea>
                <Button alignment="CENTER" maxHeight="1.7976931348623157E308"
                        maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
                        mnemonicParsing="false" onAction="#sendButtonAction" prefHeight="43.0" prefWidth="140.0"
                        scaleShape="false" text="发送" textAlignment="CENTER" HBox.hgrow="NEVER"/>
            </HBox>
        </VBox>
    </center>
    <left>
        <VBox maxHeight="1.7976931348623157E308" BorderPane.alignment="CENTER">
            <HBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0"
                  prefWidth="217.0" stylesheets="@../css/ListViewStyle.css">
                <Label prefHeight="50.0" prefWidth="124.0" text="在线用户:" textAlignment="CENTER"
                       textFill="#fc6747">
                    <font>
                        <Font name="SansSerif Regular" size="14.0"/>
                    </font>
                    <padding>
                        <Insets left="10.0"/>
                    </padding>
                    <opaqueInsets>
                        <Insets bottom="10.0"/>
                    </opaqueInsets>
                </Label>
                <Label fx:id="onlineCountLabel" prefHeight="48.0" prefWidth="94.0" text="0" textFill="#fc6747">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <font>
                        <Font name="SansSerif Regular" size="14.0"/>
                    </font>
                </Label>
            </HBox>
            <ListView fx:id="userList" focusTraversable="false" maxHeight="1.7976931348623157E308"
                      prefHeight="495.0" prefWidth="217.0" style="-fx-border-image-width: 0;"
                      stylesheets="@../css/ListViewStyle.css">
            </ListView>
        </VBox>
    </left>
    <top>
        <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                    style="-fx-background-color: #031c30;" BorderPane.alignment="CENTER">
            <center>
                <ImageView fitHeight="79.0" fitWidth="522.0" pickOnBounds="true" preserveRatio="true"
                           BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets right="100.0"/>
                    </BorderPane.margin>
                    <Image url="@../png/powerchat.png"/>
                </ImageView>
            </center>
            <right>
                <HBox prefHeight="24.0" prefWidth="30.0" stylesheets="@../css/ButtonStyle.css"
                      BorderPane.alignment="CENTER">
                    <ImageView fitHeight="22.0" fitWidth="21.0" onMousePressed="#closeApplication"
                               pickOnBounds="true" preserveRatio="true" styleClass="button">
                        <HBox.margin>
                            <Insets right="30.0" top="30.0"/>
                        </HBox.margin>
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                        <Image url="@../png/close_normal.png"/>
                    </ImageView>
                </HBox>
            </right>
            <left>
                <HBox prefWidth="259.0" BorderPane.alignment="CENTER">
                    <ImageView fx:id="userImageView" fitHeight="69.0" fitWidth="59.0" pickOnBounds="true"
                               preserveRatio="true">
                        <HBox.margin>
                            <Insets left="10.0" top="10.0"/>
                        </HBox.margin>
                        <Image url="@../png/default.png"/>
                    </ImageView>
                    <VBox>
                        <HBox.margin>
                            <Insets left="10.0" top="30.0"/>
                        </HBox.margin>
                        <Label fx:id="usernameLabel" text="Dominic Heal" textFill="#fa6648">
                            <font>
                                <Font name="HelveticaNeue Medium" size="14.0"/>
                            </font>
                        </Label>
                    </VBox>
                </HBox>
            </left>
        </BorderPane>
    </top>
    <rotationAxis>
        <Point3D/>
    </rotationAxis>
</BorderPane>
