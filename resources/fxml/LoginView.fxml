<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="borderPane" maxWidth="350.0" minWidth="350.0" prefHeight="420.0"
            prefWidth="350.0" xmlns="http://javafx.com/javafx/8.0.40"
            fx:controller="controller.LoginController">
    <right>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="325.0" minWidth="10.0"
                                   prefWidth="103.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="218.0" minWidth="10.0"
                                   prefWidth="210.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="325.0" minWidth="10.0"
                                   prefWidth="103.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="149.0" minHeight="10.0" prefHeight="36.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="226.0" minHeight="10.0" prefHeight="133.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="149.0" minHeight="10.0" prefHeight="57.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="96.0" minHeight="10.0" prefHeight="42.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="126.0" minHeight="12.0" prefHeight="35.0"/>
                <RowConstraints maxHeight="96.0" minHeight="10.0" prefHeight="29.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="127.0" minHeight="0.0" prefHeight="36.0" valignment="CENTER"/>
                <RowConstraints maxHeight="110.0" minHeight="10.0" prefHeight="47.0"/>
                <RowConstraints maxHeight="110.0" minHeight="10.0" prefHeight="28.0"/>
                <RowConstraints maxHeight="110.0" minHeight="9.0" prefHeight="11.0"/>
            </rowConstraints>
            <Button id="connectBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                    onAction="#loginButtonAction" stylesheets="@../css/Login.css" text="登录" GridPane.columnIndex="1"
                    GridPane.rowIndex="7"/>
            <Label text="ip: " textAlignment="CENTER" textFill="#f89406" GridPane.rowIndex="5"/>
            <TextField fx:id="hostnameTextField" prefWidth="188.0" text="localhost" GridPane.columnIndex="1"
                       GridPane.rowIndex="5"/>
            <Label text="端口: " textFill="#f89406" GridPane.rowIndex="6"/>
            <TextField fx:id="portTextField" prefHeight="13.0" prefWidth="149.0" text="9001" GridPane.columnIndex="1"
                       GridPane.rowIndex="6"/>
            <Label text="昵称: " textFill="#f89406" GridPane.rowIndex="3"/>
            <TextField fx:id="usernameTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            <Label prefHeight="22.0" prefWidth="73.0" text="服务器" textFill="#f89406" GridPane.columnIndex="1"
                   GridPane.rowIndex="4"/>
            <StackPane GridPane.columnIndex="1" GridPane.rowIndex="1">
                <ImageView fx:id="defaultView" fitHeight="93" fitWidth="93" pickOnBounds="true"
                           preserveRatio="true">
                    <Image url="@../png/default.png"/>
                </ImageView>
                <ImageView fx:id="girlView" fitHeight="93.0" fitWidth="124.0" pickOnBounds="true"
                           preserveRatio="true"
                           visible="false">
                    <Image smooth="false" url="@../png/girl.png"/>
                </ImageView>
                <ImageView fx:id="boyView" fitHeight="93.0" fitWidth="124.0" pickOnBounds="true"
                           preserveRatio="true"
                           visible="false">
                    <Image smooth="true" url="@../png/boy.png"/>
                </ImageView>
            </StackPane>
            <ChoiceBox fx:id="imagePicker" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="default"/>
                        <String fx:value="girl"/>
                        <String fx:value="boy"/>
                    </FXCollections>
                </items>
            </ChoiceBox>
            <Label fx:id="selectedPicture" text="Label" GridPane.rowIndex="1"/>
            <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="2">
                <GridPane.margin>
                    <Insets right="10.0" top="10.0"/>
                </GridPane.margin>
                <Button id="MinimizedBtn" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" maxHeight="24.0"
                        maxWidth="68.0" minWidth="45.0" mnemonicParsing="false" onAction="#minimizeWindow"
                        prefHeight="24.0" prefWidth="45.0" stylesheets="@../css/Login.css">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button id="CloseBtn" fx:id="closeButton" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0"
                        maxHeight="24.0" maxWidth="68.0" minWidth="45.0" mnemonicParsing="false" onAction="#closeSystem"
                        prefHeight="24.0" prefWidth="45.0" stylesheets="@../css/Login.css">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
            </HBox>
            <Label text="power-chat" textFill="#f89406" GridPane.columnIndex="1" GridPane.rowIndex="8">
                <font>
                    <Font size="10.0"/>
                </font>
            </Label>
        </GridPane>
    </right>
</BorderPane>
